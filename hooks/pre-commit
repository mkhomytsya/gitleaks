#!/usr/bin/env bash
#
# Git pre-commit hook with gitleaks for secret detection
# This hook automatically checks for secrets before allowing commits
#
# Features:
# - Auto-installs gitleaks based on OS (Linux, macOS, Windows)
# - Can be enabled/disabled via git config
# - Runs gitleaks on staged files
#
# Usage:
#   Enable:  git config --bool hooks.gitleaks true
#   Disable: git config --bool hooks.gitleaks false
#

set -e

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if hook is enabled via git config
GITLEAKS_ENABLED=$(git config --bool hooks.gitleaks || echo "true")

if [ "$GITLEAKS_ENABLED" != "true" ]; then
    echo -e "${YELLOW}‚Ñπ  Gitleaks pre-commit hook is disabled${NC}"
    echo -e "${YELLOW}   Enable it with: git config --bool hooks.gitleaks true${NC}"
    exit 0
fi

# Function to detect OS
detect_os() {
    case "$(uname -s)" in
        Linux*)     echo "linux";;
        Darwin*)    echo "darwin";;
        CYGWIN*|MINGW*|MSYS*) echo "windows";;
        *)          echo "unknown";;
    esac
}

# Function to detect architecture
detect_arch() {
    case "$(uname -m)" in
        x86_64|amd64)   echo "x64";;
        arm64|aarch64)  echo "arm64";;
        *)              echo "unknown";;
    esac
}

# Function to check if gitleaks is installed
check_gitleaks() {
    if command -v gitleaks &> /dev/null; then
        return 0
    else
        return 1
    fi
}

# Function to install gitleaks
install_gitleaks() {
    echo -e "${YELLOW}üì¶ Gitleaks not found. Installing...${NC}"
    
    local os=$(detect_os)
    local arch=$(detect_arch)
    local version="8.30.0"
    local install_dir="$HOME/.local/bin"
    
    # Create install directory if it doesn't exist
    mkdir -p "$install_dir"
    
    # Add to PATH if not already there
    if [[ ":$PATH:" != *":$install_dir:"* ]]; then
        export PATH="$install_dir:$PATH"
    fi
    
    case "$os" in
        linux)
            local filename="gitleaks_${version}_linux_${arch}.tar.gz"
            local url="https://github.com/gitleaks/gitleaks/releases/download/v${version}/${filename}"
            
            echo -e "${YELLOW}   Downloading gitleaks for Linux ${arch}...${NC}"
            curl -sSL "$url" -o "/tmp/${filename}"
            tar -xzf "/tmp/${filename}" -C "/tmp"
            mv "/tmp/gitleaks" "$install_dir/gitleaks"
            chmod +x "$install_dir/gitleaks"
            rm "/tmp/${filename}"
            ;;
            
        darwin)
            local filename="gitleaks_${version}_darwin_${arch}.tar.gz"
            local url="https://github.com/gitleaks/gitleaks/releases/download/v${version}/${filename}"
            
            echo -e "${YELLOW}   Downloading gitleaks for macOS ${arch}...${NC}"
            curl -sSL "$url" -o "/tmp/${filename}"
            tar -xzf "/tmp/${filename}" -C "/tmp"
            mv "/tmp/gitleaks" "$install_dir/gitleaks"
            chmod +x "$install_dir/gitleaks"
            rm "/tmp/${filename}"
            ;;
            
        windows)
            local filename="gitleaks_${version}_windows_${arch}.zip"
            local url="https://github.com/gitleaks/gitleaks/releases/download/v${version}/${filename}"
            
            echo -e "${YELLOW}   Downloading gitleaks for Windows ${arch}...${NC}"
            curl -sSL "$url" -o "/tmp/${filename}"
            unzip -q "/tmp/${filename}" -d "/tmp"
            mv "/tmp/gitleaks.exe" "$install_dir/gitleaks.exe"
            chmod +x "$install_dir/gitleaks.exe"
            rm "/tmp/${filename}"
            ;;
            
        *)
            echo -e "${RED}‚ùå Unsupported operating system: $os${NC}"
            echo -e "${YELLOW}   Please install gitleaks manually from: https://github.com/gitleaks/gitleaks${NC}"
            exit 1
            ;;
    esac
    
    echo -e "${GREEN}‚úì Gitleaks installed successfully to $install_dir/gitleaks${NC}"
    echo -e "${YELLOW}   Make sure $install_dir is in your PATH${NC}"
}

# Check if gitleaks is installed, install if not
if ! check_gitleaks; then
    install_gitleaks
    
    # Check again after installation
    if ! check_gitleaks; then
        echo -e "${RED}‚ùå Failed to install gitleaks${NC}"
        exit 1
    fi
fi

echo -e "${YELLOW}üîç Running gitleaks to check for secrets...${NC}"

# Run gitleaks on staged files
if gitleaks protect --staged --verbose --redact 2>&1; then
    echo -e "${GREEN}‚úì No secrets detected!${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}‚ùå Gitleaks detected secrets in your staged files!${NC}"
    echo -e "${RED}   Commit has been blocked to prevent secrets from being committed.${NC}"
    echo ""
    echo -e "${YELLOW}üìã What to do:${NC}"
    echo -e "${YELLOW}   1. Remove the secrets from your files${NC}"
    echo -e "${YELLOW}   2. Use environment variables or secret management tools${NC}"
    echo -e "${YELLOW}   3. Review the output above for specific locations${NC}"
    echo ""
    echo -e "${YELLOW}   To disable this hook: git config --bool hooks.gitleaks false${NC}"
    echo ""
    exit 1
fi
